{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gfl/player",
  "title": "Player join form",
  "description": "Choose team and stadium name, shirt and colors",
  "type": "object",
  "properties": {
    "name": {
      "title": "Team name",
      "type": "string",
      "autocomplete": "off",
      "required": true
    },
    "stadium": {
      "title": "Stadium name",
      "type": "string",
      "autocomplete": "off",
      "required": true
    },
    "base_race": {
      "title": "Base race",
      "type": "string",
      "class": "inline",
      "autocomplete": "off",
      "enum": [
        "human",
        "ork",
        "dwarf",
        "elf"
      ],
      "svg": true
    },
    "color_1": {
      "title": "First color",
      "type": "string",
      "format": "color",
      "autocomplete": "off"
    },
    "color_2": {
      "title": "Second color",
      "type": "string",
      "format": "color",
      "autocomplete": "off"
    }
  }
}